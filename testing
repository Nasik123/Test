CREATE OR REPLACE FUNCTION SF_NO_OF_DAYS(P_FROM_DATE DATE, P_TO_DATE DATE)
  RETURN NUMBER AS
  LN_COUNT NUMBER := TRUNC(P_TO_DATE - P_FROM_DATE);
  LV_DATE  DATE := P_FROM_DATE;
  CNT      NUMBER := 0;
BEGIN
  FOR I IN 1 .. LN_COUNT LOOP
    IF TO_CHAR(LV_DATE, 'D') = 1 THEN
      CNT :=CNT + 1;
    END IF;
    LV_DATE :=LV_DATE + 1;
  END LOOP;
  RETURN CNT;
END;
